#include <iostream>

long long factorial(int n) {
    if (n <= 1) return 1;
    return n * factorial(n - 1);
}

int main() {
    int number;
    std::cout << "Введите число: ";
    std::cin >> number;
    std::cout << "Факториал " << number << " = " << factorial(number) << std::endl;
    return 0;
}
